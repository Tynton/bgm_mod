country_decisions = {

	french_nation = {
		major = yes
		potential = {
			normal_or_historical_nations = yes
			was_never_end_game_tag_trigger = yes
			NOT = { has_country_flag = formed_france_flag }
			OR = {
				ai = no
				is_playing_custom_nation = no
			}
			NOT = { tag = HLR }
			NOT = { exists = FRA }
			NOT = { exists = FRE }
			NOT = { exists = FRR }
			NOT = { exists = FRC }
			NOT = { exists = FRF }
			NOT = { exists = BFR }
			NOT = { exists = BUP }
			NOT = { exists = BFE }
			NOT = { exists = FRW }
			NOT = { tag = FAN }
			NOT = { tag = PAP }
			NOT = { tag = SPA }		# Basque is a valid culture for both FRA and SPA
			OR = {
				ai = no
				NOT = {
					OR = {
						exists = FRA
						exists = FRW
					}
				}
			}
			OR = {
				culture_group = french
				culture_group = occitan
				culture_group = franco_provencal
				primary_culture = swiss
				primary_culture = basque
				primary_culture = breton
			}
			is_colonial_nation = no
			OR = {
				is_former_colonial_nation = no
				AND = {
					is_former_colonial_nation = yes
					ai = no
				}
			}
		}
		provinces_to_highlight = {
			OR = {
				province_id = 177	# Maine
				province_id = 179	# Blois
				province_id = 182	# Vermandois
				province_id = 183	# Île-de-France
				province_id = 184	# Orléannais
				province_id = 185	# Othe
				province_id = 186	# Champagne
			}
			OR = {
				NOT = { owned_by = ROOT }
				NOT = { is_core = ROOT }
			}
		}
		allow = {
			is_at_war = no
			#is_free_or_tributary_trigger = yes
			is_nomad = no			
			NOT = { exists = FRA }
			owns_core_province = 177	# Maine
			owns_core_province = 179	# Blois
			owns_core_province = 182	# Vermandois
			owns_core_province = 183	# Île-de-France
			owns_core_province = 184	# Orléannais
			owns_core_province = 185	# Othe
			owns_core_province = 186	# Champagne		
		}
		effect = {
			if = {
				limit = { primary_culture = swiss }
				183 = { change_culture = swiss }
			}
			183 = { #Paris
				move_capital_effect = yes
			}
			if = {
				limit = {
					NOT = { primary_culture = swiss }
					NOT = { primary_culture = burgundian }
					NOT = { primary_culture = frainc_comtou }
				}
				change_tag = FRA

				france_region = {
					limit = {
						NOT = { owned_by = ROOT }
					}
					add_permanent_claim = FRA
				}
			}
			if = {
				limit = {
					primary_culture = swiss
				}
				change_tag = SFR

				france_region = {
					limit = {
						NOT = { owned_by = ROOT }
					}
					add_permanent_claim = SFR
				}
			}

			if = {
				limit = {
					OR = {
						primary_culture = burgundian
						primary_culture = frainc_comtou
					}
				}
				change_tag = BFR
			}
			every_province = {
				limit = {
					is_core = FRA
				}
				add_core = ROOT
			}
			if = {
				limit = {
					NOT = { culture_group = french }
				}
				country_event = {
					id = franceunity.9
				}
			}
			
			#namechange = yes
			swap_non_generic_missions = yes
			remove_non_electors_emperors_from_empire_effect = yes
			if = {
				limit = {
					NOT = { government_rank = 2 }
				}
				set_government_rank = 2
			}
			france_region = {
				limit = {
					NOT = { owned_by = ROOT }
				}
				add_permanent_claim = ROOT
			}
			add_country_modifier = {
				name = "centralization_modifier"
				duration = 7300
			}
			add_prestige = 25
			if = {
				limit = {
					has_custom_ideas = no
					OR = {
						ai = no
						AND = {
							ai = yes
							has_idea_group = default_ideas
						}
					}
				}
				country_event = { id = ideagroups.1 } #Swap Ideas
			}
			set_country_flag = formed_france_flag
		}
		ai_will_do = {
			factor = 1
		}
	}
	
	french_aesthetic = {
		potential = {
			tag = FRA
		}
		allow = {
			tag = FRA
		}
		effect = {
			custom_tooltip = fra_custom
			hidden_effect = {
				change_tag = FRW
			}
		}
		ai_will_do = {
			factor = 0
		}
	}
	revert_aesthetic = {
		potential = {
			tag = FRW
		}
		allow = {
			tag = FRW
		}
		effect = {
			custom_tooltip = fra_vanilla
			hidden_effect = {
				change_tag = FRA
			}
		}
		ai_will_do = {
			factor = 0
		}
	}
}
